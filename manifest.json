{
  "manifest_version": 3,
  "name": "Phishing Detector Lite",
  "version": "1.0.0",
  "description": "Advanced phishing protection with real-time URL analysis and beautiful interface",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "webNavigation",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Detector Lite"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}